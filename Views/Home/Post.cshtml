@model MyBlog.Models.Blog

 <header class="masthead" style="background-image: url('@Model.ImagePath')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1>@Model.Title</h1>
            <h2 class="subheading">@Model.Subtitle</h2>
            <span class="meta">Posted by
                        @Model.Author.Name
              on @Model.CreateTime</span>
          </div>
        </div>
      </div>
    </div>
  </header>
 <div class="container">
  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
                    @Html.Raw(Model.Content)
        </div>
      </div>
    </div>
  </article>
    <!-- Yorumları gösterme bölümü -->
    <div id="comments">
        <h3>Yorumlar</h3>
        @foreach (var comment in Model.Comments)
        {
            <div class="comment">
                <p><strong>@comment.AuthorName:</strong> @comment.Text</p>
            </div>
        }
    </div>

    <!-- Yorum ekleme formu -->
    <div id="commentForm">
        <h3>Yorum Yap</h3>
        <form asp-action="AddComment" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label for="authorName">Adınız:</label>
                <input type="text" class="form-control" id="authorName" name="AuthorName" required>
            </div>
            <div class="form-group">
                <label for="commentText">Yorumunuz:</label>
                <textarea class="form-control" id="commentText" name="CommentText" rows="3" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Yorumu Gönder</button>
        </form>
    </div>
    </div>